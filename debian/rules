#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

VERSION_MAJOR = $(shell grep "VERSION_MAJOR=" Makefile | grep -Eo '[0-9]+$$')
VERSION_MINOR = $(shell grep "VERSION_MINOR=" Makefile | grep -Eo '[0-9]+$$')
VERSION_PATCH = $(shell grep "VERSION_PATCH=" Makefile | grep -Eo '[0-9]+$$')

%:
	dh $@

override_dh_install:
	echo ${VERSION_MAJOR}
	echo ${VERSION_MINOR}
	sed 's/@DEB_HOST_MULTIARCH@/${DEB_HOST_MULTIARCH}/g' debian/secureserial.pc.in > debian/secureserial.pc
	sed -i -e 's/@MAJOR@/${VERSION_MAJOR}/g' -e 's/@MINOR@/${VERSION_MINOR}/g' -e 's/@PATCH@/${VERSION_PATCH}/g' debian/secureserial.pc
	dh_install

# Needed for Artifactory as it doesn't support default compression method under 22.04.
override_dh_builddeb:
	dh_builddeb -- -Zxz

# dh_make generated override targets
# This is example for Cmake (See https://bugs.debian.org/641051 )
#override_dh_auto_configure:
#	dh_auto_configure -- #	-DCMAKE_LIBRARY_PATH=$(DEB_HOST_MULTIARCH)
